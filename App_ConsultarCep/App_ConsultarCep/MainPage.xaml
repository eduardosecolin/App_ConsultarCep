<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App_ConsultarCep"
             x:Class="App_ConsultarCep.MainPage">

	<StackLayout BackgroundColor="Gold" Padding="30" Spacing="30">
		<Image Source="correios.png" x:Name="logo" HeightRequest="90" WidthRequest="90"/>
		<Entry Placeholder="Digite o cep" PlaceholderColor="LightGray" BackgroundColor="White" x:Name="txtCep" />
		<Button Text="Buscar Cep" TextColor="White" BackgroundColor="Blue" x:Name="btnBuscar"/>
		<Label HorizontalOptions="Center" VerticalOptions="CenterAndExpand" x:Name="lblResultado" />
    </StackLayout>

</ContentPage>
